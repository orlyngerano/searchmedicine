<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    card_view:cardCornerRadius="4dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:padding="10dp">
        
        <ImageView
            android:id="@+id/product_detail_img"
            android:contentDescription="product image"
        	android:layout_width="match_parent"
        	android:layout_height="300dp"
        	android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/product_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_detail_img"/>
        
       <TextView
            android:id="@+id/product_detail_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_detail_name"/>

        <TextView
            android:id="@+id/product_detail_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_detail_form"/>

        <TextView
            android:id="@+id/product_detail_manufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_detail_route"/>
        
        <TextView
            android:id="@+id/product_detail_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_detail_manufacturer"/>
        
        
    </RelativeLayout>

</android.support.v7.widget.CardView>